---
pagination:
  data: collections.posts
  size: 1
permalink: "/og/{{ pagination.items[0].fileSlug }}.svg"
eleventyExcludeFromCollections: true
layout: null
---
{% set post = pagination.items[0] %}
<svg xmlns="http://www.w3.org/2000/svg" width="1200" height="630" viewBox="0 0 1200 630">
  <defs>
    <linearGradient id="g" x1="0" x2="1" y1="0" y2="1">
      <stop offset="0%" stop-color="#4A90D9"/>
      <stop offset="100%" stop-color="#E86B8A"/>
    </linearGradient>
    <style>
      .title { font-family: 'Google Sans', Roboto, Arial, sans-serif; font-weight:700; font-size:48px; fill:#fff }
      .meta { font-family: 'Google Sans Text', Roboto, Arial, sans-serif; font-size:20px; fill:#fff; opacity:0.9 }
    </style>
  </defs>
  <rect width="100%" height="100%" fill="url(#g)" />
  <g transform="translate(64,120)">
    <text class="title" x="0" y="0">{{ post.data.title | safe }}</text>
    <text class="meta" x="0" y="70">Interlaced Pixel â€¢ {{ post.date.toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' }) }}</text>
  </g>
</svg>