---
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';

interface Props {
	title: string;
	description?: string;
}

const { title, description = "High-performance networking tools and VS Code extensions." } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <meta name="description" content={description}>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Google+Sans:wght@400;500;700&family=Google+Sans+Text:wght@400;500&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Outlined" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">

    <!-- SEO & Social -->
    <link rel="canonical" href="https://interlaced-pixel.github.io/">
    <meta name="robots" content="index,follow">
    <meta name="theme-color" content="#4A90D9">
    
    <meta property="og:title" content={title}>
    <meta property="og:description" content={description}>
    <meta property="og:type" content="website">
    <meta property="og:url" content="https://interlaced-pixel.github.io/">
    <meta property="og:site_name" content="Interlaced Pixel">

    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content={title}>
    <meta name="twitter:description" content={description}>
</head>
<body class="fade-in">
    <!-- Skip Link -->
    <a href="#main-content" class="skip-link">Skip to main content</a>

    <!-- Progress Bar -->
    <div id="progress-bar"></div>

    <!-- Back to Top -->
    <button class="back-to-top" aria-label="Back to top">
        <span class="material-icons-outlined">arrow_upward</span>
    </button>

    <!-- Background Canvas -->
    <canvas id="bg-canvas"></canvas>

    <div class="menu-overlay"></div>
    
    <Navbar />

    <main id="main-content">
        <slot />
        <Footer />
    </main>

    <div id="toast-container"></div>
    <script src="/js/main.js" is:inline></script>
</body>
</html>
