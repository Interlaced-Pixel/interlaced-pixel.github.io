---
layout: base.njk
---
<article class="card" style="max-width:780px;margin:18px auto;padding-bottom:40px;">
  {# --- per-post SEO meta --- #}
  {% set canonical = ("https://interlaced-pixel.github.io" ~ page.url) %}
  {% set ogImage = ("https://interlaced-pixel.github.io/og/" ~ page.fileSlug ~ ".svg") %}
  <head>
    <link rel="canonical" href="{{ canonical }}">
    <meta name="description" content="{{ (description || excerpt) | safe }}">
    <meta property="og:title" content="{{ title }}">
    <meta property="og:description" content="{{ (description || excerpt) | safe }}">
    <meta property="og:image" content="{{ ogImage }}">
    <meta property="og:type" content="article">
    <meta name="twitter:card" content="summary_large_image">
  </head>

  <h1>{{ title }}</h1>
  <p class="muted">{{ date.toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' }) }}</p>
  <div class="post-body">
    {{ content | safe }}
  </div>

  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "Article",
    "headline": {{ title | dump }},
    "description": {{ (description || excerpt) | dump }},
    "datePublished": {{ date.toJSON() | dump }},
    "url": {{ canonical | dump }},
    "publisher": { "@id": "https://interlaced-pixel.github.io/#org" }
  }
  </script>
</article>